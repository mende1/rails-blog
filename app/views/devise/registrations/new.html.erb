<div id="page-content">
  <div class="container mt-4">

    <h1 class="text-center">Sign Up</h1>

    <div class="row justify-content-center mt-4">
      <div class="col-6 mt-4 shadow p-4 mb-5 bg-body-tertiary rounded align-items-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-4">
            <%= f.label :name, 
              class: "form-label col-lg-2 col-form-label col-form-label-lg",
              for: "nameInput"
            %>
              <%= f.text_field :name, 
              class: "form-control", 
              id: "nameInput",
              autofocus: true,
              autocomplete: "name"
            %>
          </div>

          <div class="mb-4">
            <%= f.label :email, 
              class: "form-label col-lg-2 col-form-label col-form-label-lg",
              for: "emailInput"
            %>
            <%= f.email_field :email, 
              class: "form-control",
              id: "emailInput",
              autocomplete: "email"
            %>
          </div>

          <div class="mb-4">
            <%= f.label :password, 
              class: "form-label col-lg-2 col-form-label col-form-label-lg",
              for: "passwordInput"
            %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, 
              class: "form-control",
              id: "passwordInput",
              autocomplete: "new-password"
            %>
          </div>
          
          <div class="mb-4">
            <%= f.label :password_confirmation, 
              class: "form-label col-form-label col-form-label-lg",
              for: "passwordInput"
            %>
            <%= f.password_field :password_confirmation, 
              class: "form-control",
              id: "passwordInput",
              autocomplete: "new-password"
            %>     
          </div>

          <div class="text-center mt-2">
            <%= f.submit "Sign Up", class: "btn btn-outline-light" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>