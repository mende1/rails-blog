<div id="page-content">
  <div class="container mt-4">
    <div class="row justify-content-center mt-4">
      <div class="col-10 mt-4 shadow p-4 mb-4 bg-body-tertiary rounded">
        <h1><%= @article.title %></h1>
        <div>
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-light btn-sm" %>
          <%= link_to "Destroy", article_path(@article), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }, class: "btn btn-outline-light btn-sm" %>
        </div>
        <div class="mt-5" ><%= simple_format(@article.body) %></div>
        <div class="pt-4">
          <p class="text-end fs-6 fw-light">Created <%= time_ago_in_words(@article.created_at) %> ago, 
              edited <%= time_ago_in_words(@article.updated_at) %> ago</p>
        </div>
      </>

    </div>

    <div class="row justify-content-center mt-4 mb-5">
      <div class="col-10 shadow p-4 bg-body-tertiary rounded">
        <h2>Comments</h2>
        <%= render @article.comments.order(created_at: :desc) %>

        <h4 class="mt-4">Add a comment:</h4>
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>
